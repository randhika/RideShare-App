<resources>

    <color name="background">#fffefefe</color>
    <color name="text">#2D3E50</color>
    <color name="text_secondary">#5B6269</color>
    <color name="textLight">#828282</color>
    <color name="highlight">#1BBC9B</color>
    <color name="highlight_secondary">#0C5647</color>
    <color name="highlight_dark">#18A98C</color>
    <color name="success">#1BBC9B</color>
    <color name="navigation_text">#E4F2DF</color>
    <color name="error">#E64C66</color>
    <color name="warning">#FFD069</color>
    <color name="gray_light">#E3E3E3</color>
    <color name="gray">#AEAEAE</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/highlight</item>
        <item name="colorPrimaryDark">@color/highlight_dark</item>
        <item name="colorAccent">@color/highlight_dark</item>
    </style>

    <style name="WaitDialog" parent="android:style/Theme.Dialog">
    </style>

    <style name="TimeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/highlight</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RideShareEditText">

    </style>

    <style name="RideShareText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="RideShareTextSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="RideShareTextSecondaryDate">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="RideShareTextError" parent="RideShareText">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="RideShareTextWaitingSelect" parent="RideShareText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="RideShareTextNavigation" parent="RideShareText">
        <item name="android:textColor">@color/navigation_text</item>
        <item name="android:background">@color/highlight_dark</item>
    </style>

    <style name="RideShareTextTitle" parent="RideShareTextNavigation">
        <item name="android:background">@color/highlight</item>
    </style>

    <style name="WaitMsgText" parent="RideShareText">
        <item name="android:textColor">@color/background</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RideShareButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="RideShareButtonTab" parent="RideShareButton">
        <item name="android:textColor">@color/navigation_text</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="RideShareFlatButton" parent="RideShareButton">
        <item name="android:background">@color/gray_light</item>
        <item name="android:textColor">@color/highlight</item>
    </style>

    <style name="RideShareTransparentButton" parent="RideShareFlatButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/highlight</item>
    </style>

    <style name="RideShareSpinner" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@color/text</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
