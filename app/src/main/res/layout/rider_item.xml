<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:columnCount="5"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/item_border">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RideShareTextTitle"
            android:padding="1dp"
            android:minWidth="100dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RideShareTextSecondaryTitle"
            android:layout_row="1"
            android:layout_marginTop="10dp"
            android:layout_column="0"
            android:padding="3dp"
            android:text="@string/fullName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_marginTop="10dp"
            android:layout_column="1"
            style="@style/RideShareTextSecondaryTitle"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:layout_columnSpan="4"
            android:text="@string/phone" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vsvdsvdsv"
            style="@style/RideShareText"
            android:paddingLeft="3dp"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RideShareText"
            android:text="vsvdsvdsv"
            android:paddingLeft="10dp"
            android:layout_row="2"
            android:layout_columnSpan="4"
            android:layout_column="1" />

        <RatingBar android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_marginBottom="5dp"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_gravity="end"
            android:numStars="5"
            android:stepSize="1.0"
            style="@style/RideShareRatingBar"/>

        <Button android:id="@+id/add_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="5"
            android:layout_gravity="end"
            android:text="@string/add_to_ride"
            style="@style/RideShareFlatButtonSmall"/>

        <Button android:id="@+id/del_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="5"
            android:layout_gravity="end"
            android:text="@string/rem_from_ride"
            style="@style/RideShareFlatButtonSmallRemove"/>

    </GridLayout>
</LinearLayout>